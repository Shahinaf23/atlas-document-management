FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache python3 make g++ libc6-compat

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build application
RUN NODE_ENV=development npm run build

# Expose port
EXPOSE 5000

# Start application
CMD ["npm", "start"]