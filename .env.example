# Atlas Document Management - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/atlas_documents
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=atlas_documents

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random

# Development Configuration
NODE_ENV=development

# Optional: If using Neon Database (Cloud)
# DATABASE_URL=postgresql://username:password@ep-example.us-east-1.aws.neon.tech/atlas_documents?sslmode=require

# Optional: Custom Port (default is 5000)
# PORT=3000